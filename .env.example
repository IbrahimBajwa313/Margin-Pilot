MONGODB_URI=your_mongodb_connection_string

# Session signing secret (min 16 characters). Used to sign the auth cookie so users can't impersonate others.
# Generate with: openssl rand -base64 24
AUTH_SECRET=your_auth_secret

# Supabase Storage for image/file uploads (profile photo, company logo). Create a public bucket named "uploads" in Supabase Dashboard.
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend: send invite emails when adding company users. Get key at resend.com. From address must be verified or use onboarding@resend.dev for testing.
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_INVITE_FROM=MarginPilot <onboarding@resend.dev>
